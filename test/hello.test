lappend auto_path [file join [file dirname [file normalize [info script]]] ..]

package require tclbuildtest

::tclbuildtest::sandbox {
    foreach b {{} static} {
        test [list c $b] {
            run [compile hello.c]
        }
        test [list cxx $b] {
            run [compile hello.cpp]
        }
    }
}