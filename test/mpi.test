lappend auto_path [file join [file dirname [file normalize [info script]]] ..]

package require tclbuildtest

::tclbuildtest::sandbox {
    foreach b {{} static} {
        test [list mpi c $b] {
            run [compile mpi.c]
        }
        test [list mpi cxx $b] {
            run [compile mpi.cpp]
        }
        test [list mpi fortran $b] {
            run [compile mpi.f90]
        }
    }
}